<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_back"
                android:scaleX="0.5"
                android:scaleY="0.7" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:text="Details"
                android:textSize="60px" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/favorite"
                android:scaleX="0.5"
                android:scaleY="0.7" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l1">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/i3" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:layout_marginTop="20dp"
                android:text="Plant Name"
                android:textColor="@color/black"
                android:textSize="80px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv2"
                android:layout_marginTop="10dp"
                android:text="Price $30"
                android:textSize="60px" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/l3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/l2">

            <Button
                android:id="@+id/btn3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/add"
                android:scaleX="0.5"
                android:scaleY="0.8" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/btn3"
                android:padding="4dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="80px" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv4"
                android:background="@drawable/sub"
                android:scaleX="0.5"
                android:scaleY="0.8" />

            <RatingBar
                android:id="@+id/rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:numStars="5"
                android:scaleX="0.5"
                android:scaleY="0.7" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/l4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l3">

            <TextView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="It is a long established fact that the reader will be distracted by readable content of the page, while looking at the layout."
                android:textSize="45px"
                android:textColor="@color/black"
                android:padding="30dp"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv5"
                android:text="BUY NOW"
                android:textColor="@color/white"
                android:textSize="60px"
                android:padding="25dp"
                android:background="@drawable/custom_layout_3"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>