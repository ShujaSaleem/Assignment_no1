<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/i4">

    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shuja"
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android Developer"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="100dp"
        android:layout_below="@id/t1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/t2"
        android:background="@drawable/custom_layout_1">

        <TextView
            android:id="@+id/l2_t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="SIGN UP"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/l2_e1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/l2_t1"
            android:layout_margin="20dp"
            android:background="@drawable/custom_edit_field_1"
            android:hint="Username"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/l2_e2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/l2_e1"
            android:layout_margin="20dp"
            android:background="@drawable/custom_edit_field_1"
            android:hint="Phone Number"
            android:inputType="number"
            android:padding="10dp"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/l2_e3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/l2_e2"
            android:layout_margin="20dp"
            android:background="@drawable/custom_edit_field_1"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/l2_e4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/l2_e3"
            android:layout_margin="20dp"
            android:inputType="textPassword"
            android:background="@drawable/custom_edit_field_1"
            android:hint="Password"
            android:padding="10dp"
            android:textSize="25dp" />

        <Button
            android:id="@+id/l2_b1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/l2_e4"
            android:layout_margin="20dp"
            android:background="@drawable/custom_button_1"
            android:padding="10dp"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </RelativeLayout>

</RelativeLayout>